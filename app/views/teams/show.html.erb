<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @team.title %>
</p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Parent</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<li><%= link_to "New Folder", new_team_folder_path(team_id: @team.id) %></li>

  <tbody>
    <% @folders.each do |folder| %>
      <tr>
        <td><%= folder.name %></td>
        <td><%= folder.team_id %></td>
        <td><%= link_to 'Show', [@team, folder] %></td>
        <td><%= link_to 'Edit', edit_team_folder_path(folder) %></td>
        <td><%= link_to 'Destroy', [@team, folder], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



